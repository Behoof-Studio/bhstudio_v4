{% extends "base.njk" %}

{% block content %}
    <!-- Hero Section START -->
<div class="uk-section uk-section-default">
  <div class="uk-container">
    <div class="uk-child-width-1-2@m" uk-grid>
      <div class="hero__container uk-flex uk-flex-column uk-flex-center">
        <h2 class="hero__title--about">
          {{ title }}
        </h2>
        <img data-src="/assets/images/watercolor_26.png" width="300" height="70" alt="Abstract watercolor brush accent"
          uk-img />
        <p class="hero__subtitle">
          {{ client }}
        </p>
      </div>
      <div>
        <img class="case-study__cover" data-src="{{ cover_image }}" width="550" height="550"
          alt="Abstract illustration" uk-img />
      </div>
    </div>
  </div>
</div>
<!-- Hero Section END -->

<!-- Main Content Section START -->
<div class="uk-section uk-section-default uk-padding-remove-top">
  <div class="uk-container uk-container-small">
    <article class="uk-article article__container">
      {{ content | safe }}
  </div>
</div>
<!-- Main Content Section END -->

{# Limit displayed items START #}
{% set related_posts = collections.home_page | reverse | limit(6) %}
{# Limit displayed items END #}

<!-- More Case Studies Section START -->
<div class="uk-section uk-section-default">
  <div class="uk-container">
    <div class="uk-child-width-1-2@s uk-child-width-1-3@m" uk-grid="masonry: true">
      {%- for post in related_posts -%}
        {# {% if page.url !== post.url %} #}
          <!-- Card Component START -->
          <div>
            <div class="uk-card uk-card-default posts-grid__card">
              <div class="uk-card-media-top">
                <img src="{{ post.data.cover_image }}" alt="" />
              </div>
              <div class="uk-card-body">
                <h3 class="card__title uk-card-title">
                  <a class="uk-link-reset" href="{{ post.url | url }}">{{ post.data.title }}</a>
                </h3>
                <p class="card__excerpt">
                  {{ post.data.client | truncate(250) }}
                </p>
              </div>
              <div class="uk-card-footer">
                <span class="uk-badge card__badge">Case Study</span><span
                  class="uk-badge card__badge card__badge--green">Blog</span>
              </div>
            </div>
          </div>
          <!-- Card Component END -->
        {# {% endif %} #}
      {%- endfor -%}
    </div>
  </div>
  <!-- See More Button START -->
  <h4 class="button--load-more uk-link-reset"><a href="/our-work">See All <span uk-icon="arrow-right"></span></a></h3>
    <!-- See More Button END -->
</div>
<!-- More Case Studies Section END -->
{% endblock content %}
